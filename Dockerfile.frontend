FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY frontend/package*.json ./
RUN npm ci

# Copy source
COPY frontend/src ./src
COPY frontend/index.html ./
COPY frontend/vite.config.ts ./

# Build
RUN npm run build

# Serve
FROM node:20-alpine
RUN npm install -g serve
COPY --from=0 /app/dist /app/dist
WORKDIR /app
CMD ["serve", "-s", "dist", "-l", "3000"]
