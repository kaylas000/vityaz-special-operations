{
  "name": "vityaz-special-operations",
  "version": "0.1.0",
  "description": "VITYAZ: Special Operations - PvP FPS with Crypto Economy",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "dev:frontend": "npm --workspace=frontend run dev",
    "dev:backend": "npm --workspace=backend run start:dev",
    "build": "npm run build --workspaces",
    "build:frontend": "npm --workspace=frontend run build",
    "build:backend": "npm --workspace=backend run build",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "db:migrate": "npm --workspace=backend run prisma:migrate",
    "db:seed": "npm --workspace=backend run prisma:seed"
  }
}
