# TON BLOCKCHAIN CONFIGURATION

# Network Settings
NETWORK=testnet
# Options: testnet, mainnet

# TON Center API
TON_API_KEY=your_ton_api_key_here
TON_API_V2_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
# For mainnet: https://toncenter.com/api/v2/jsonRPC

# Wallet Configuration
WALLET_MNEMONIC=word1 word2 word3 ... word24
# Generate new: solana-keygen new (or use existing)

WALLET_VERSION=v4r2
# Supported versions: v3r2, v4r2

# Deployed Contract Addresses (fill after deployment)
VITYAZ_TOKEN_ADDRESS=
MARKETPLACE_ADDRESS=
STAKING_ADDRESS=

# Optional: RPC Endpoints
TON_RPC_ENDPOINT_1=https://testnet.toncenter.com/api/v2/jsonRPC
TON_RPC_ENDPOINT_2=https://testnet-v2.tonhubapi.com

# Deployment Settings
DEPLOY_GAS_LIMIT=1000000
DEPLOY_TIMEOUT=60000
DEPLOY_ATTEMPTS=3

# Logging
LOG_LEVEL=debug
# Options: debug, info, warn, error

# Features
ENABLE_AUTO_DEPLOY=false
ENABLE_VERIFICATION=true
